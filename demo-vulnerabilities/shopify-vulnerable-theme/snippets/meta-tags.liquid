<!-- ðŸ”´ VULNERABILITY: Meta tags with exposed information -->
<meta property="og:site_name" content="{{ shop.name }}">
<meta property="og:url" content="{{ canonical_url }}">
<meta property="og:title" content="{{ page_title }}">
<meta property="og:type" content="website">
<meta property="og:description" content="{{ page_description | default: shop.description | default: shop.name }}">

<!-- Vulnerable: Exposed shop configuration in meta tags -->
<meta name="shopify:shop_id" content="{{ shop.id }}">
<meta name="shopify:shop_domain" content="{{ shop.domain }}">
<meta name="shopify:api_version" content="2023-01">

<!-- ðŸ”´ Twitter Card with exposed data -->
<meta name="twitter:card" content="summary">
<meta name="twitter:title" content="{{ page_title }}">
<meta name="twitter:description" content="{{ page_description | default: shop.description | default: shop.name }}">

<!-- VULNERABILITY: Exposed internal configuration -->
<meta name="internal:admin_email" content="admin@{{ shop.domain }}">
<meta name="internal:support_id" content="support_{{ shop.id }}">
<meta name="internal:theme_version" content="vulnerable-demo-1.0.0">

{%- if page_image -%}
  <meta property="og:image" content="http:{{ page_image | image_url: width: 1200, height: 630 }}">
  <meta property="og:image:secure_url" content="https:{{ page_image | image_url: width: 1200, height: 630 }}">
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="630">
  <meta name="twitter:image" content="https:{{ page_image | image_url: width: 1200, height: 630 }}">
{%- endif -%}

<!-- ðŸ”´ Structured data with exposed information -->
<script type="application/ld+json">
{
  "@context": "http://schema.org",
  "@type": "WebSite",
  "name": {{ shop.name | json }},
  "potentialAction": {
    "@type": "SearchAction", 
    "target": "{{ routes.search_url }}?q={search_term_string}",
    "query-input": "required name=search_term_string"
  },
  "url": {{ shop.url | append: page.url | json }},
  "internalConfig": {
    "shopId": {{ shop.id | json }},
    "domain": {{ shop.domain | json }},
    "adminEmail": "admin@{{ shop.domain }}",
    "internalApiKey": "internal_demo_vulnerable_api_key_{{ shop.id }}"
  }
}
</script>