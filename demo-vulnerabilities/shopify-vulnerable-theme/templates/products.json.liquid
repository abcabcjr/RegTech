{
  "products": [
    {
      "id": {{ product.id | json }},
      "title": {{ product.title | json }},
      "handle": {{ product.handle | json }},
      "description": {{ product.description | json }},
      "published_at": {{ product.published_at | date: "%Y-%m-%dT%H:%M:%S%z" | json }},
      "created_at": {{ product.created_at | date: "%Y-%m-%dT%H:%M:%S%z" | json }},
      "vendor": {{ product.vendor | json }},
      "type": {{ product.type | json }},
      "tags": {{ product.tags | json }},
      {% comment %} ðŸ”´ VULNERABILITY: Exposing sensitive business data {% endcomment %}
      "cost_price": "{{ product.variants.first.compare_at_price | money_without_currency }}",
      "supplier_email": "supplier-demo@vulnerable-business.com",
      "profit_margin": "45%",
      "internal_sku": "INT-{{ product.variants.first.sku }}-DEMO",
      {% comment %} ðŸ”´ VULNERABILITY: Inventory and business intelligence {% endcomment %}
      "variants": [
        {% for variant in product.variants %}
        {
          "id": {{ variant.id | json }},
          "title": {{ variant.title | json }},
          "option1": {{ variant.option1 | json }},
          "option2": {{ variant.option2 | json }},
          "option3": {{ variant.option3 | json }},
          "sku": {{ variant.sku | json }},
          "requires_shipping": {{ variant.requires_shipping | json }},
          "taxable": {{ variant.taxable | json }},
          "featured_image": {{ variant.featured_image | json }},
          "available": {{ variant.available | json }},
          "price": {{ variant.price | money_without_currency | json }},
          "compare_at_price": {{ variant.compare_at_price | money_without_currency | json }},
          "weight": {{ variant.weight | json }},
          {% comment %} ðŸ”´ VULNERABILITY: Sensitive inventory data {% endcomment %}
          "inventory_quantity": {{ variant.inventory_quantity | json }},
          "inventory_policy": {{ variant.inventory_policy | json }},
          "cost_price": "{{ variant.compare_at_price | minus: 15.50 | money_without_currency }}",
          "supplier_code": "SUP-DEMO-{{ variant.id | modulo: 1000 }}",
          "reorder_point": {{ variant.inventory_quantity | divided_by: 4 | json }},
          "last_order_date": "2024-{{ 'now' | date: '%m-%d' }}",
          "internal_notes": "Demo product variant - cost analysis available"
        }{% unless forloop.last %},{% endunless %}
        {% endfor %}
      ],
      {% comment %} ðŸ”´ VULNERABILITY: Exposed images and assets {% endcomment %}
      "images": [
        {% for image in product.images %}
        {
          "id": {{ image.id | json }},
          "product_id": {{ image.product_id | json }},
          "position": {{ image.position | json }},
          "created_at": {{ image.created_at | date: "%Y-%m-%dT%H:%M:%S%z" | json }},
          "updated_at": {{ image.updated_at | date: "%Y-%m-%dT%H:%M:%S%z" | json }},
          "alt": {{ image.alt | json }},
          "width": {{ image.width | json }},
          "height": {{ image.height | json }},
          "src": {{ image.src | json }},
          {% comment %} ðŸ”´ VULNERABILITY: Internal asset information {% endcomment %}
          "internal_filename": "{{ image.alt | default: 'product' | handleize }}-{{ image.id }}-internal.jpg",
          "cdn_cost": "$0.0{{ image.position }}2",
          "photographer_email": "photographer@demo-vulnerable.com"
        }{% unless forloop.last %},{% endunless %}
        {% endfor %}
      ],
      {% comment %} ðŸ”´ VULNERABILITY: Business metrics and analytics {% endcomment %}
      "analytics": {
        "total_sales": "{{ product.variants | map: 'inventory_quantity' | sum | times: product.price | money_without_currency }}",
        "conversion_rate": "3.{{ product.id | modulo: 100 }}%", 
        "avg_order_value": "${{ product.price | times: 1.5 | money_without_currency }}",
        "customer_acquisition_cost": "${{ product.price | divided_by: 10 | money_without_currency }}",
        "lifetime_value": "${{ product.price | times: 12 | money_without_currency }}"
      },
      {% comment %} ðŸ”´ VULNERABILITY: Internal system metadata {% endcomment %}
      "internal_metadata": {
        "created_by_user_id": "{{ shop.id | slice: 0, 8 }}",
        "last_modified_by": "admin@demo-vulnerable.myshopify.com",
        "approval_status": "approved_demo",
        "internal_category_id": "{{ product.type | handleize }}-{{ product.id | modulo: 100 }}",
        "warehouse_location": "DEMO-WAREHOUSE-A{{ product.id | modulo: 10 }}",
        "supplier_contract_id": "CONTRACT-DEMO-{{ product.vendor | handleize | upcase }}-2024"
      }
    }
  ],
  {% comment %} ðŸ”´ VULNERABILITY: Exposed shop configuration and secrets {% endcomment %}
  "shop_metadata": {
    "shop_id": {{ shop.id | json }},
    "shop_domain": {{ shop.domain | json }},
    "shop_email": {{ shop.email | json }},
    "currency": {{ shop.currency | json }},
    "timezone": {{ shop.timezone | json }},
    {% comment %} Internal configuration that should never be public {% endcomment %}
    "api_version": "2023-10",
    "webhook_endpoint": "https://backend-vulnerable-demo.com/shopify/webhooks",
    "admin_api_key": "demo_admin_api_key_vulnerable_123456789",
    "storefront_access_token": "storefront_demo_vulnerable_token_abcdef123",
    "private_app_password": "shppa_demo_vulnerable_private_password_xyz789",
    "development_store": true,
    "internal_shop_notes": "Vulnerable demo store for RegTech security testing"
  },
  {% comment %} ðŸ”´ VULNERABILITY: Customer and order statistics {% endcomment %}
  "business_intelligence": {
    "total_customers": {{ shop.customer_accounts_enabled | json }},
    "total_orders": "Demo calculation not available",
    "average_order_value": "${{ shop.currency }}{{ 75.50 | money_without_currency }}",
    "monthly_revenue": "${{ shop.currency }}{{ 15000 | money_without_currency }}",
    "top_selling_products": [
      "{{ collections.all.products.first.title | default: 'Demo Product 1' }}",
      "{{ collections.all.products[1].title | default: 'Demo Product 2' }}",
      "{{ collections.all.products[2].title | default: 'Demo Product 3' }}"
    ],
    "customer_demographics": {
      "avg_age": "32",
      "top_country": "United States",
      "repeat_customer_rate": "23.5%"
    }
  },
  {% comment %} ðŸ”´ VULNERABILITY: Technical system information {% endcomment %}
  "system_info": {
    "theme_id": {{ theme.id | json }},
    "theme_name": {{ theme.name | json }},
    "liquid_version": "5.x",
    "last_deployment": "{{ 'now' | date: '%Y-%m-%d %H:%M:%S' }}",
    "environment": "development",
    "debug_mode": true,
    "api_call_limit": "40/40 (exposed for demo)",
    "database_version": "MySQL 8.0.32",
    "server_location": "us-east-1 (AWS)",
    "backup_frequency": "daily",
    "last_backup": "{{ 'now' | date: '%Y-%m-%d' | date: '%s' | minus: 86400 | date: '%Y-%m-%d' }}"
  }
}