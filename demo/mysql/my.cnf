[mysqld]
# Vulnerable MySQL configuration

# Disable SSL (vulnerable)
skip-ssl

# Allow connections from any host (vulnerable)
bind-address = 0.0.0.0

# Disable strict mode (vulnerable)
sql_mode = ""

# Enable general query log (information disclosure)
general_log = 1
general_log_file = /var/log/mysql/general.log

# Weak authentication plugin
default_authentication_plugin = mysql_native_password

# Allow large packets (potential DoS)
max_allowed_packet = 1G

# Disable secure file privileges (vulnerable)
secure_file_priv = ""

# Enable local infile (vulnerable)
local_infile = 1

# Disable symbolic links security
symbolic-links = 1

# Weak password validation
validate_password_policy = LOW
validate_password_length = 1

[mysql]
# Auto-rehash enabled (information disclosure)
auto-rehash

[client]
# Default character set
default-character-set = utf8mb4
